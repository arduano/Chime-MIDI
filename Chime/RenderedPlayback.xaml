<UserControl x:Class="Chime.RenderedPlayback"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chime"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Slider x:Name="timeSlider" Margin="122,0,10,12" Height="18" VerticalAlignment="Bottom" Maximum="1" ValueChanged="TimeSlider_ValueChanged" TickFrequency="0.01" SmallChange="1"/>
        <Button x:Name="pauseButton" Content="Pause" HorizontalAlignment="Left" Margin="10,0,0,10" Width="107" Height="22" VerticalAlignment="Bottom" Click="PauseButton_Click"/>
        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Margin="10,10,10,37">
            <DockPanel x:Name="tracksDock" LastChildFill="False"/>
        </ScrollViewer>

    </Grid>
</UserControl>
