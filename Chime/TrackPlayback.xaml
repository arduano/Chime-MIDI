<UserControl x:Class="Chime.TrackPlayback"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Chime"
             mc:Ignorable="d" 
             d:DesignHeight="450" Width="83.923">
    <Grid>
        <Label x:Name="name" HorizontalContentAlignment="Center" Content="" Height="26" VerticalAlignment="Bottom"/>
        <Label x:Name="dbLabel" HorizontalContentAlignment="Center" Content="" Margin="0,10,0,0" VerticalAlignment="Top"/>
        <Slider x:Name="gain" Orientation="Vertical" Margin="0,36,12,31" HorizontalAlignment="Right" Width="18" Maximum="15" Minimum="-15" ValueChanged="Gain_ValueChanged"/>
        <ProgressBar x:Name="volume" Orientation="Vertical" Margin="10,41,42,31" Minimum="-20" Maximum="20"/>

    </Grid>
</UserControl>
